
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Product = (List<Model.EF.SanPham>)ViewBag.Product;
}

<style>
    .con{
       margin-bottom:80%;
    }
</style>
<h2>Index</h2>

<div class="con">
    @foreach (var item in Product)

    {
        var url = "/san-pham/" + item.MetaTitle + "-" + item.ID;
        <div class="grid_1_of_4 images_1_of_4">
            <a href="preview.html"><img src="@item.Image" width="250" height="250" alt="@item.Name" /></a>
            <h2>@item.Name </h2>
            <div class="price-details">
                <div class="price-number">
                    <p><span class="rupees">@(item.Price.HasValue ? @item.Price.Value.ToString("N0") : "Liên Hệ")</span></p>
                </div>
                <div class="add-cart">
                    <h4><a href="@url">Thêm vào giỏ hàng</a></h4>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    }
</div>
